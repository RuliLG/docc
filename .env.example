# Text-to-Speech Configuration
# Set at least one of these for audio generation

# ElevenLabs (preferred for high-quality voices)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# OpenAI TTS (fallback)
OPENAI_API_KEY=your_openai_api_key_here

# AI Provider Configuration for OpenCode CLI
# These are optional - only needed if you want to use OpenCode
# OpenCode will use any of these that are configured

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key_here

# xAI Grok API
XAI_API_KEY=your_xai_api_key_here

# AI Gateway API (for proxying requests)
AI_GATEWAY_API_KEY=your_ai_gateway_api_key_here

# OpenRouter API (for multiple model access)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Application Configuration
# Backend server settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Frontend settings
REACT_APP_API_BASE_URL=http://localhost:8000/api/v1

# Audio cache settings
AUDIO_CACHE_DIR=audio_cache
AUDIO_CACHE_MAX_SIZE_MB=500

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=docc.log

# CORS settings (comma-separated URLs)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security settings
SECRET_KEY=your_secret_key_for_sessions_here

# Development settings
DEVELOPMENT=true
