# Text-to-Speech Configuration
# Set at least one of these for audio generation

# ElevenLabs (preferred for high-quality voices)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# OpenAI TTS (fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
# Backend server settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Frontend settings
REACT_APP_API_BASE_URL=http://localhost:8000/api/v1

# Audio cache settings
AUDIO_CACHE_DIR=audio_cache
AUDIO_CACHE_MAX_SIZE_MB=500

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=docc.log

# CORS settings (comma-separated URLs)
DOCC_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security settings
SECRET_KEY=your_secret_key_for_sessions_here

# Optional: Database configuration (for future features)
# DATABASE_URL=sqlite:///./docc.db

# Optional: Redis for caching (for future features)
# REDIS_URL=redis://localhost:6379

# Development settings
DEVELOPMENT=true
